<!DOCTYPE html>
  <html>
    <head>
      <title>Show</title>
    </head>
    <body>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5 class="card-title"><%= @country.name %></h5>
              <h3>States</h3>
            </div>
            <div class="card-title col-md-6">
              <%= link_to 'Edit', edit_country_path(@country) %>
              <%= link_to "Delete", @state, method: :delete, data: { confirm: "Are you sure you want to delete this state?"} %>
            </div>
          </div>
          <% @country.states.each do |state| %>
            <p class="card-text"><%=link_to state.name, state_path(state)  %></p>
          <% end %>
        </div>
      </div>
    </body>
  </html>





