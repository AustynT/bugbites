<!DOCTYPE html>
  <html>
    <head>
      <title>Show</title>
    </head>
    <body>
      <div class="card show_card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5 class="card-title"><%= @state.name %></h5>
            </div>
            <div class="card-title col-md-6">
              <% if logged_in?(:user) %>
              <%= link_to 'Edit', edit_state_path(@state) %>
              <%= link_to "Delete", @state, method: :delete, data: { confirm: "Are you sure you want to delete this state?"} %>
              <% end %>
            </div>
          </div>
          <% @state.blogs.each do |blog| %>
          <h3>Blog Titles:</h3>
            <p class="card-text"><%=link_to blog.title, blog_path(blog)  %></p>
          <% end %>
        </div>
      </div>
    </body>
  </html>












  