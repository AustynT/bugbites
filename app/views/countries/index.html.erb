<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <div class="container">
    <h1>Countries</h1>
      <% @countries.each do |country| %>
      <div class="card" style="width: 20rem;">
          <div class="card-body">
            <div class="row">
            <div class="col-lg-6">
            <%= link_to country.name, country_path(country) %>
          </div>
          <div class="col-md-6">
            <% if logged_in?(:user) %>
            <%= link_to "Edit", edit_country_path(country) %>
            <%= link_to "Destroy", country, method: :delete, data: { confirm: "Are you sure you want to delete this state?"} %>
            <% end %>
          </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <h6>States:</h6>
            <% country.states.each do |state| %>
            <%= link_to state.name, controller: 'states', action: "show", id:state  %>
          </div>
        </div>
            <% end %>
      </div>
</div>
</body>
</html>




        <% end %>
