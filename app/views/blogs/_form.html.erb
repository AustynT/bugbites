<%= form_for @blog do |f| %>
  <div class="card">
    <form>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder: "title" %>
          </div>

        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control", rows: 10 %>
        </div>
      </div>

      <div class="form-group">  
          <%= f.collection_select(:state_id, State.all, :id, :name, {
include_blank: true
},class: "form-control"  )%>
          <%= f.label :state_id %>
        </div>

          <%= f.fields_for :photos do |photo_form| %>
            <div class="form-group">
              <%= photo_form.file_field :my_photo, class: "form-control" %>
          <% end %>
            </div>
      </div>
      <div class="row">
        <div class="save-button">
          <%= f.submit "Save", class: 'form-control' %>
<% end %>
        </div>
      </div>
  </form>
</div>